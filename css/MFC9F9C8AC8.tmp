@import url('https://fonts.googleapis.com/css2?family=Catamaran:wght@100;200;400;500;700;800&display=swap%27');

:root {
    --color-contenido: #898989;
    --color-negrooscuro: #282d33; 
    --color-fondofooter: #30363d;
    --color-fondogris: #f5f5f5;
}

body{
	font-size: Segoe UI;
	font-size: 15px;
	color: #777;
	font-family: 'Catamaran', sans-serif;
}
header{
	position: relative;
	background-color: #f9f9f9;
	width: 100%;
	top:0;
}

#hero{
	background-image: url("../img/home-slide.jpg");
	background-size:cover;
	background-position:center;
	padding:15%;
}

#hero h1{
	color: var( --color-negrooscuro);
		font-size: 50px;
}

#ctaproducts{
	background-image: url("../img/product-parallax.jpg");
	padding: 10%;
	background-attachment: fixed;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
	color: var( --color-fondogris);
}



.btn-primary{
	background-color: var( --color-negrooscuro);
	border-radius: 30px;
    padding: 10px;
    border-color: transparent;
}

#ctaflexibility{
	background-image: url("../img/product-parallax-2.jpg");
	padding: 15%;
	background-attachment: fixed;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
	
	
}

#infoproduct h1{
	background-color: var( --color-negrooscuro);
}



#product{
	padding:8%;
}

#clients{
	color: #f5f5f5;
}


.fondo-gris{
	background-color: #f5f5f5;
	padding: 5%;
}

footer{
	background-color: #30363d;
	padding: 30px;
	color: #999;
	text-align: center;
	font-size: 13px;
	font-weight: 600;
}
footer p{
	margin-bottom: 0;
}

